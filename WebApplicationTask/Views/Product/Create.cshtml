@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2 ">INSERT PRODUCT </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3 ">
				<div class="form-floating py-2 col-12">
				<input asp-for="ProdName" class="form-control border-0 shadow" />
				<label asp-for="ProdName" class="ms-2"></label>
				<span asp-validation-for="ProdName" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ProdPrice" class="form-control border-0 shadow" />
					<label asp-for="ProdPrice" class="ms-2"></label>
					<span asp-validation-for="ProdPrice" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ProdQty" class="form-control border-0 shadow" />
					<label asp-for="ProdQty" class="ms-2"></label>
					<span asp-validation-for="ProdQty" class="text-danger"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">

						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3 ">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to list</a>
					</div>

				</div>

			</div>
		</form>

	</div>

</div>

@section scripts{
	@{
		<partial name="_validationscriptspartial"/>
	}
}