@model Product

<div class="card shadow border-0 mt-4">
  <div class="card-header bg-secondary bg-gradient ml-0 py-3">	
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2 ">Edit Product </h2>
			</div>
		</div>
  </div>
  <div class="card-body p-4">
	  <form method="post">
		  <input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="ProdName" class="form-control border-0 shadow" />
					<label asp-for="ProdName" class="ms-2"></label>
					<span asp-validation-for="ProdName" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ProdPrice" class="form-control border-0 shadow"/>
					<label asp-for="ProdPrice" class="ms-2"></label>
					<span asp-validation-for="ProdPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ProdQty" class="form-control border-0 shadow" />
					<label asp-for="ProdQty" class="ms-2"></label>
					<span asp-validation-for="ProdQty" class="text-danger"></span>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary btn-danger form-control">Edit</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
					</div>

				</div>

			</div>
	  </form>

  </div>
</div>

@section Scripts{
	@{
		<partial name="_validationscriptspartial" />
	}
}
